<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerNewsItem"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:background="@android:color/holo_red_dark"
        android:id="@+id/newsDeleteOption"
        android:layout_width="160dp"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/news_delete_item"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_size_20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/newsViewInfo"
        android:padding="10dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:padding="@dimen/dimen_padding_16dp"
            android:textColor="@color/title_news"
            android:textSize="@dimen/dimen_size_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Racket Compiler and Runtime Status" />

        <TextView
            android:id="@+id/newsAdditionalInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_padding_16dp"
            android:paddingRight="@dimen/dimen_padding_16dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/dimen_size_16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newsTitle"
            tools:text="kfarr - 18 Junio"/>

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>