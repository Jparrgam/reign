<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_padding_16dp"
        android:paddingTop="@dimen/dimen_padding_48dp"
        android:paddingRight="@dimen/dimen_padding_16dp"
        android:text="@string/home_title"
        android:textColor="@color/title_news"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_padding_16dp"
        android:paddingRight="@dimen/dimen_padding_16dp"
        android:text="@string/home_title"
        android:paddingBottom="@dimen/dimen_padding_16dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/dimen_size_16sp"
        android:textStyle="normal"
        tools:text="156 nuevas noticias sobre mobile" />

</merge>